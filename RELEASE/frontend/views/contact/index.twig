{# empty Twig template #}
<script>
 {% if app.session.get('contact_message') != "" %}
        alert("{{ app.session.get('contact_message') }}");       
   {% endif %}
</script>
<div id="main">
    <div class="container clearfix">
        <div class="main-content">
            <section class="section">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="form-wrapper register-form">
                            <h1 class="the-title">Liên hệ</h1>
                            <p>Hãy liên hệ cho chúng tôi bằng những thông tin ở dưới</p>
                            <form method="POST" id="contact-form">
                                <input type="hidden" name="{{csrfParam}}" value="{{csrfToken}}">
                                <div class="form-group">
                                    <label class="control-label">Họ và tên</label>
                                    <input type="text" class="form-control validate[required]" name="Contact[name]"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Thông tin liên hệ (Số điện thoại hoặc email của bạn)</label>
                                    <input type="text" class="form-control validate[required]" name="Contact[msisdn]"/>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Câu hỏi của bạn</label>
                                    <textarea class="form-control validate[required]" name="Contact[content]"></textarea>
                                </div>
                                <div class="form-group">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-danger">Gửi liên hệ</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
