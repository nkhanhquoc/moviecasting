<div class="container">
    <div class="row">
      {{ include('_genres.twig',{'genreId':genreId, 'listGenre':listGenre}) }}

      <div class="col-sm-9 col-md-9">
              <div class="mdl-1 mdl-playlists">
          	     <div class="title" style="width: 500px">
                    <a href="javascript:void(0)" class="txt"> {{ title }}</a>
                </div>

                <!-- Nav tabs -->
                <ul class="nav nav-pills" role="tablist">
                  <li class=""><a href="#profile" role="tab" data-toggle="tab"></a></li>
                  <li class=""><a href="#messages" role="tab" data-toggle="tab"></a></li>
                  <li class="active"><a href="#home" role="tab" data-toggle="tab">Nổi bật</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                      <div role="tabpanel" class="tab-pane active" id="home">
                         <div class="row">
                          {% for val in playlists %}
                            <div class="col-md-3 col-xs-6 item">
                                <a {{ ajax_url('playlist/detail',{'slug':val.slug})|raw }} class="image-play">
                                    <img width="100%" src="{{ val.image_path|imagePathThumb(164) }}">
                                    <i class="fa icon-play"></i>
                                </a>
                                <a {{ ajax_url('playlist/detail',{'slug':val.slug})|raw }} class="song-name ellipsis">{{val.name}}</a>
                                <p class="singer-name ellipsis"><a {{ ajax_url('playlist/detail',{'slug':val.slug})|raw }}>{{ val.singers | getSingerNameJson }}</a></p>
                            </div>
                          {% endfor %}

                       </div>
                         <!--Pagination-->                         
                          {{ include('@app/views/components/pagination.twig',{'pages':pages}) }}
                      </div>
                      <!-- <div role="tabpanel" class="tab-pane" id="profile">... 2</div>
                      <div role="tabpanel" class="tab-pane" id="messages">... 3</div> -->
                    </div>
          </div>
          </div>

    </div>
</div>
