<div class="container">
  <div class="row">

    {{include('_genres.twig',{'listGenre':listGenre})}}

  	<div class="col-sm-9 col-md-9">
        <div class="mdl-1 mdl-playlists">
        <div class="title ellipsis">
              Việt Nam
          </div>
          <!-- Nav tabs -->
          <ul class="nav nav-pills" role="tablist">
            <li><a href="#profile" role="tab" data-toggle="tab"></a></li>
            <li><a href="#messages" role="tab" data-toggle="tab"></a></li>
            <li class="active"><a href="#home" role="tab" data-toggle="tab">Nổi bật</a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">
               <div role="tabpanel" class="tab-pane active" id="home">
                 <div class="mdl-videos">
                      <div class="row">
                        {% for val in listVideo %}
                            {% set artist=val.getSingerName() %}
                            <div class="col-md-3 col-sm-3 col-xs-6 item">
                                <a href="{{ url('video/detail', {'slug' : val.slug}) }}" class="image-play">
                                    <img width="100%" src="{{ val.image_path|imagePathThumb(164, 92, 'video') }}">
                                    <i class="fa icon-play"></i>
                                </a>
                                <a href="{{ url('video/detail', {'slug' : val.slug}) }}" class="song-name ellipsis">{{val.name}}</a>
                                <p class="singer-name ellipsis"><a href="{{ url('video/detail', {'slug' : val.slug}) }}">{{artist}}</a></p>
                            </div>
                        {% endfor %}
                     </div>
                </div>
                   <!--Pagination-->
                    {{ include('@app/views/components/pagination.twig',{'pages':pages}) }}
                </div>
                <!-- <div role="tabpanel" class="tab-pane" id="profile">... 2</div>
                <div role="tabpanel" class="tab-pane" id="messages">... 3</div> -->
              </div>
    </div>
    </div>


  </div>

</div>
